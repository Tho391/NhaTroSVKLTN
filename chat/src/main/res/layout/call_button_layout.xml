<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/gu"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@id/button_end_call"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/button_mute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/gu"
        android:background="@drawable/circle_background"
        android:backgroundTint="@color/button_light_background"
        android:src="@drawable/ic_baseline_mic_off_36"
        android:tint="@android:color/white"
        android:visibility="invisible"

        app:layout_constraintBottom_toTopOf="@id/textView_mute"
        app:layout_constraintEnd_toStartOf="@id/button_camera_off"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_time" />

    <ImageButton
        android:id="@+id/button_camera_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/gu"
        android:background="@drawable/circle_background"
        android:backgroundTint="@color/button_light_background"
        android:src="@drawable/ic_baseline_videocam_off_36"
        android:tint="@android:color/white"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/textView_camera_off"
        app:layout_constraintEnd_toStartOf="@id/button_end_call"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@id/button_mute"

        app:layout_constraintTop_toBottomOf="@id/textView_time" />

    <ImageButton
        android:id="@+id/button_end_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/gu"
        android:background="@drawable/circle_background"
        android:backgroundTint="@android:color/holo_red_light"
        android:src="@drawable/ic_baseline_call_end_36"
        android:tint="@android:color/white"
        app:layout_constraintBottom_toTopOf="@id/textView_end_call"
        app:layout_constraintEnd_toStartOf="@id/button_share_screen"

        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@id/button_camera_off"
        app:layout_constraintTop_toBottomOf="@id/textView_time" />

    <ImageButton
        android:id="@+id/button_share_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/gu"
        android:background="@drawable/circle_background"
        android:backgroundTint="@color/button_light_background"
        android:src="@drawable/ic_baseline_mobile_screen_share_36"
        android:tint="@android:color/white"
        android:visibility="invisible"

        app:layout_constraintBottom_toTopOf="@id/textView_share_screen"
        app:layout_constraintEnd_toStartOf="@id/button_swap_camera"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@id/button_end_call"
        app:layout_constraintTop_toBottomOf="@id/textView_time" />

    <ImageButton
        android:id="@+id/button_swap_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/gu"
        android:background="@drawable/circle_background"
        android:backgroundTint="@color/button_light_background"
        android:src="@drawable/ic_baseline_switch_camera_36"
        android:tint="@android:color/white"
        android:visibility="invisible"

        app:layout_constraintBottom_toTopOf="@id/textView_swap_camera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@id/button_share_screen"
        app:layout_constraintTop_toBottomOf="@id/textView_time" />

    <TextView
        android:id="@+id/textView_mute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/gu"
        android:text="@string/mute"
        android:textColor="@android:color/white"
        android:visibility="invisible"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/button_mute"
        app:layout_constraintStart_toStartOf="@id/button_mute"
        app:layout_constraintTop_toBottomOf="@id/button_mute" />

    <TextView
        android:id="@+id/textView_camera_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/gu"
        android:text="@string/off_cam"
        android:textColor="@android:color/white"
        android:visibility="invisible"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/button_camera_off"
        app:layout_constraintStart_toStartOf="@id/button_camera_off"
        app:layout_constraintTop_toBottomOf="@id/button_camera_off" />

    <TextView
        android:id="@+id/textView_end_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/gu"
        android:text="@string/end_call"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/button_end_call"
        app:layout_constraintStart_toStartOf="@id/button_end_call"
        app:layout_constraintTop_toBottomOf="@id/button_end_call" />

    <TextView
        android:id="@+id/textView_share_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_margin="@dimen/gu"
        android:text="@string/share_screen"
        android:textColor="@android:color/white"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/button_share_screen"
        app:layout_constraintStart_toStartOf="@id/button_share_screen"
        app:layout_constraintTop_toBottomOf="@id/button_share_screen" />

    <TextView
        android:id="@+id/textView_swap_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/gu"
        android:text="@string/swap_cam"
        android:textColor="@android:color/white"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/button_swap_camera"
        app:layout_constraintStart_toStartOf="@id/button_swap_camera"
        app:layout_constraintTop_toBottomOf="@id/button_swap_camera" />

</androidx.constraintlayout.widget.ConstraintLayout>