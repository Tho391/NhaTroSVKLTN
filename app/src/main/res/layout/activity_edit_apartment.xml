<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.editapartment.EditApartmentActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ActionBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:title="@string/sua_phong"
            app:titleTextColor="@color/primaryTextColor" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraint1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardView_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/small_margin"
                android:elevation="4dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/backGroundLightColor">

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintGuide_percent="0.5"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/textView_basic_info"
                        style="@style/Headline6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/small_margin"
                        android:lines="1"
                        android:maxWidth="230dp"
                        android:text="@string/thong_tin_co_ban"
                        android:textColor="@color/primaryTextColor"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editText_title"
                        style="@style/Subtitle2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/default_margin"
                        android:layout_marginTop="@dimen/small_margin"
                        android:background="@drawable/edit_text_background"
                        android:hint="@string/tieu_de"
                        android:padding="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textView_basic_info" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editText_name"
                        style="@style/Subtitle2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/default_margin"
                        android:layout_marginTop="@dimen/small_margin"
                        android:background="@drawable/edit_text_background"
                        android:hint="@string/ten_chu"
                        android:padding="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/editText_title" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editText_phone"
                        style="@style/Subtitle2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/default_margin"
                        android:layout_marginTop="@dimen/small_margin"
                        android:background="@drawable/edit_text_background"
                        android:hint="@string/so_dien_thoai"
                        android:padding="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/editText_name" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editText_address"
                        style="@style/Subtitle2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/default_margin"
                        android:layout_marginTop="@dimen/small_margin"
                        android:background="@drawable/edit_text_background"
                        android:drawableEnd="@drawable/location"
                        android:hint="@string/dia_chi"
                        android:padding="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/editText_phone" />

                    <TextView
                        android:id="@+id/textView1"
                        style="@style/Subtitle2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/default_margin"
                        android:gravity="left"
                        android:lines="1"
                        android:paddingHorizontal="@dimen/small_margin"
                        android:paddingVertical="4dp"
                        android:text="@string/gia_phong"
                        android:textColor="@color/primaryTextColor"
                        app:layout_constraintEnd_toEndOf="@id/guideline"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/editText_address" />

                    <TextView
                        android:id="@+id/textView2"
                        style="@style/Subtitle2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/default_margin"
                        android:gravity="right"
                        android:lines="1"
                        android:paddingHorizontal="@dimen/small_margin"
                        android:paddingVertical="4dp"
                        android:text="@string/dien_tich"
                        android:textColor="@color/primaryTextColor"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/guideline"
                        app:layout_constraintTop_toBottomOf="@id/editText_address" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editText_price"
                        style="@style/Subtitle2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/default_margin"
                        android:layout_marginVertical="@dimen/small_margin"
                        android:background="@drawable/edit_text_background"
                        android:hint="5000000"
                        android:padding="10dp"
                        app:layout_constraintEnd_toEndOf="@id/guideline"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textView1" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editText_area"
                        style="@style/Subtitle2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/default_margin"
                        android:layout_marginVertical="@dimen/small_margin"
                        android:background="@drawable/edit_text_background"
                        android:hint="30"
                        android:padding="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/guideline"
                        app:layout_constraintTop_toBottomOf="@id/textView2" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardView_utils"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/small_margin"
                android:elevation="10dp"

                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardView_info">

                <androidx.gridlayout.widget.GridLayout
                    android:id="@+id/grid_utils"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:background="@color/backGroundLightColor"
                    android:paddingBottom="4dp"
                    app:columnCount="3"
                    app:rowCount="5">

                    <TextView
                        android:id="@+id/textView_utils"
                        style="@style/Headline6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/small_margin"
                        android:text="Tiện ích"
                        android:textAlignment="center"
                        android:textColor="@color/primaryTextColor"
                        app:layout_columnSpan="3"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1" />

                    <com.thomas.apps.nhatrosvkltn.utils.ToggleImageView
                        android:id="@+id/image_wifi"
                        android:layout_width="@dimen/smaller_image"
                        android:layout_height="@dimen/smaller_image"
                        android:layout_margin="@dimen/smaller_margin"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        app:src_checked="@drawable/wifi_blue"
                        app:src_unchecked="@drawable/wifi_gray" />

                    <com.thomas.apps.nhatrosvkltn.utils.ToggleImageView
                        android:id="@+id/image_time"
                        android:layout_width="@dimen/smaller_image"
                        android:layout_height="@dimen/smaller_image"
                        android:layout_margin="@dimen/smaller_margin"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        app:src_checked="@drawable/time_blue"
                        app:src_unchecked="@drawable/time_gray" />

                    <com.thomas.apps.nhatrosvkltn.utils.ToggleImageView
                        android:id="@+id/image_key"
                        android:layout_width="@dimen/smaller_image"
                        android:layout_height="@dimen/smaller_image"
                        android:layout_margin="@dimen/smaller_margin"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        app:src_checked="@drawable/key_blue"
                        app:src_unchecked="@drawable/key_gray" />

                    <TextView
                        android:id="@+id/textView_wifi"
                        style="@style/Subtitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Wifi"
                        android:textColor="@color/primaryTextColor"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1" />

                    <TextView
                        android:id="@+id/textView_time"
                        style="@style/Subtitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Tự do"
                        android:textColor="@color/primaryTextColor"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1" />

                    <TextView
                        android:id="@+id/textView_key"
                        style="@style/Subtitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Chung chủ"
                        android:textColor="@color/primaryTextColor"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1" />

                    <com.thomas.apps.nhatrosvkltn.utils.ToggleImageView
                        android:id="@+id/image_car"
                        android:layout_width="@dimen/smaller_image"
                        android:layout_height="@dimen/smaller_image"
                        android:layout_margin="@dimen/smaller_margin"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        app:src_checked="@mipmap/bike_blue"
                        app:src_unchecked="@mipmap/bike_gray" />

                    <com.thomas.apps.nhatrosvkltn.utils.ToggleImageView
                        android:id="@+id/image_air"
                        android:layout_width="@dimen/smaller_image"
                        android:layout_height="@dimen/smaller_image"
                        android:layout_margin="@dimen/smaller_margin"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        app:src_checked="@mipmap/air_blue"
                        app:src_unchecked="@mipmap/air_gray" />

                    <com.thomas.apps.nhatrosvkltn.utils.ToggleImageView
                        android:id="@+id/image_heater"
                        android:layout_width="@dimen/smaller_image"
                        android:layout_height="@dimen/smaller_image"
                        android:layout_margin="@dimen/smaller_margin"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        app:src_checked="@mipmap/heater_blue"
                        app:src_unchecked="@mipmap/heater_gray" />

                    <TextView
                        android:id="@+id/textView_car"
                        style="@style/Subtitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Wifi"
                        android:textColor="@color/primaryTextColor"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1" />

                    <TextView
                        android:id="@+id/textView_air"
                        style="@style/Subtitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Tự do"
                        android:textColor="@color/primaryTextColor"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1" />

                    <TextView
                        android:id="@+id/textView_heater"
                        style="@style/Subtitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Chung chủ"
                        android:textColor="@color/primaryTextColor"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1" />
                </androidx.gridlayout.widget.GridLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardView_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_margin="@dimen/small_margin"
                android:elevation="10dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardView_utils">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:background="@color/backGroundLightColor">

                    <TextView
                        android:id="@+id/textView_details"
                        style="@style/Headline6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/small_margin"
                        android:text="Chi tiết"
                        android:textColor="@color/primaryTextColor"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editText_details_content"
                        style="@style/Subtitle2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/small_margin"
                        android:background="@drawable/edit_text_background"
                        android:hint="@string/thong_tin_chi_tiet"
                        android:padding="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textView_details" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardView_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_margin"
                android:layout_marginBottom="56dp"
                android:layout_marginHorizontal="@dimen/small_margin"
                android:elevation="10dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardView_details">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/backGroundLightColor">

                    <TextView
                        android:id="@+id/textView_image_title"
                        style="@style/Headline6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/small_margin"
                        android:text="Hình ảnh phòng"
                        android:textColor="@color/primaryTextColor"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <GridView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/small_margin"
                        android:numColumns="3"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textView_image_title" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>