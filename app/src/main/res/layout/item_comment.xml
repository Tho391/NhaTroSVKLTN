<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_margin"
        android:elevation="4dp"
        app:cardCornerRadius="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView_avatar"
            android:layout_width="@dimen/small_image"
            android:layout_height="@dimen/small_image"
            android:scaleType="centerCrop"
            android:src="@drawable/person" />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/textView_author"
        style="@style/Headline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_margin"
        android:lines="1"
        android:maxWidth="230dp"
        android:text="User"
        android:textColor="@color/primaryColor"
        app:layout_constraintStart_toEndOf="@id/cardView_avatar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_content"
        style="@style/Subtitle2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_margin"
        android:padding="4dp"
        android:text="Bình luận Bình luận Bình luận Bình luận Bình luận Bình luận Bình luận Bình luận Bình luận Bình luận Bình luận Bình luận Bình luận"
        android:textColor="@color/primaryColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cardView_avatar"
        app:layout_constraintTop_toBottomOf="@id/textView_author" />

    <TextView
        android:id="@+id/textView_date"
        style="@style/Subtitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_margin"
        android:lines="1"
        android:padding="4dp"
        android:maxWidth="100dp"
        android:text="30/04/2020"
        app:layout_constraintBottom_toBottomOf="@id/textView_author"
        android:textColor="@color/primaryColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/textView_author" />
</androidx.constraintlayout.widget.ConstraintLayout>