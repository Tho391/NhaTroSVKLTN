<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.home.HomeFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backGroundColor">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardView_map"
                android:layout_width="@dimen/small_image"
                android:layout_height="@dimen/small_image"
                android:layout_margin="@dimen/large_margin"
                android:elevation="4dp"
                app:cardCornerRadius="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageButton
                    android:id="@+id/imageButton_map"
                    android:layout_width="@dimen/small_image"
                    android:layout_height="@dimen/small_image"
                    android:background="@android:color/transparent"
                    android:padding="@dimen/smaller_margin"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/round_location" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardView_search"
                android:layout_width="@dimen/small_image"
                android:layout_height="@dimen/small_image"
                android:layout_margin="@dimen/large_margin"

                android:elevation="4dp"
                app:cardCornerRadius="20dp"


                app:layout_constraintEnd_toStartOf="@id/cardView_add_apartment"
                app:layout_constraintStart_toEndOf="@id/cardView_map"
                app:layout_constraintTop_toTopOf="parent">

                <ImageButton
                    android:id="@+id/imageButton_search"
                    android:layout_width="@dimen/small_image"
                    android:layout_height="@dimen/small_image"
                    android:background="@android:color/transparent"
                    android:padding="@dimen/small_margin"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/search" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardView_add_apartment"
                android:layout_width="@dimen/small_image"
                android:layout_height="@dimen/small_image"
                android:layout_margin="@dimen/large_margin"

                android:elevation="4dp"
                app:cardCornerRadius="20dp"


                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageButton
                    android:id="@+id/imageButton_add_apartment"
                    android:layout_width="@dimen/small_image"
                    android:layout_height="@dimen/small_image"
                    android:background="@android:color/transparent"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/house_add" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/textView_tim_xung_quanh"
                style="@style/Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/default_margin"
                android:layout_marginTop="@dimen/small_margin"
                android:gravity="center_horizontal"
                android:text="@string/tim_xung_quanh"
                android:textColor="@color/primaryColor"
                app:layout_constraintEnd_toEndOf="@id/cardView_map"
                app:layout_constraintStart_toStartOf="@id/cardView_map"
                app:layout_constraintTop_toBottomOf="@id/cardView_map" />

            <TextView
                style="@style/Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/default_margin"
                android:layout_marginTop="@dimen/small_margin"
                android:gravity="center_horizontal"

                android:text="@string/tim_nhanh"
                android:textColor="@color/primaryColor"
                app:layout_constraintEnd_toEndOf="@id/cardView_search"
                app:layout_constraintStart_toStartOf="@id/cardView_search"
                app:layout_constraintTop_toBottomOf="@id/cardView_search" />

            <TextView
                style="@style/Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/default_margin"
                android:layout_marginTop="@dimen/small_margin"
                android:gravity="center_horizontal"

                android:text="@string/dang_phong"
                android:textColor="@color/primaryColor"
                app:layout_constraintEnd_toEndOf="@id/cardView_add_apartment"
                app:layout_constraintStart_toStartOf="@id/cardView_add_apartment"
                app:layout_constraintTop_toBottomOf="@id/cardView_add_apartment" />

            <TextView
                android:id="@+id/textView2"
                style="@style/Headline6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_margin"
                android:text="@string/xu_huong_tim_kiem"
                android:textColor="@color/primaryColor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_tim_xung_quanh" />

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/grid_district"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_margin"
                android:background="@android:color/transparent"
                app:alignmentMode="alignBounds"
                app:columnCount="3"
                app:columnOrderPreserved="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView2"
                app:rowCount="4">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/small_image"
                    android:layout_height="@dimen/small_image"
                    android:layout_margin="@dimen/smaller_margin"
                    android:adjustViewBounds="true"
                    android:elevation="4dp"
                    app:cardCornerRadius="10dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/image_district_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/quan10" />
                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/small_image"
                    android:layout_height="@dimen/small_image"
                    android:layout_margin="@dimen/smaller_margin"
                    android:adjustViewBounds="true"
                    android:elevation="4dp"

                    app:cardCornerRadius="10dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/image_district_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/quan3" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/small_image"
                    android:layout_height="@dimen/small_image"
                    android:layout_margin="@dimen/smaller_margin"
                    android:adjustViewBounds="true"
                    android:elevation="4dp"

                    app:cardCornerRadius="10dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/image_district_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/thuduc" />
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/textView_district1"

                    style="@style/Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Quận 10"
                    android:textColor="@color/primaryColor"
                    android:textStyle="bold"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1" />

                <TextView
                    android:id="@+id/textView_district2"
                    style="@style/Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Quận 3"
                    android:textColor="@color/primaryColor"

                    android:textStyle="bold"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1" />

                <TextView
                    android:id="@+id/textView_district3"
                    style="@style/Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Thủ Đức"
                    android:textColor="@color/primaryColor"

                    android:textStyle="bold"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/small_image"
                    android:layout_height="@dimen/small_image"
                    android:layout_margin="@dimen/smaller_margin"
                    android:adjustViewBounds="true"
                    android:elevation="4dp"

                    app:cardCornerRadius="10dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/image_district_4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/quan1" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/small_image"
                    android:layout_height="@dimen/small_image"
                    android:layout_margin="@dimen/smaller_margin"
                    android:adjustViewBounds="true"
                    android:elevation="4dp"

                    app:cardCornerRadius="10dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/image_district_5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/binhthanh" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/small_image"
                    android:layout_height="@dimen/small_image"
                    android:layout_margin="@dimen/smaller_margin"
                    android:adjustViewBounds="true"
                    android:elevation="4dp"

                    app:cardCornerRadius="10dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/image_district_6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/quan7" />
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/textView_district4"
                    style="@style/Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:gravity="center"
                    android:text="Quận 1"
                    android:textColor="@color/primaryColor"

                    android:textStyle="bold"
                    app:layout_columnWeight="1"

                    app:layout_rowWeight="1" />

                <TextView
                    android:id="@+id/textView_district5"
                    style="@style/Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Bình Thạnh"
                    android:textColor="@color/primaryColor"
                    android:textStyle="bold"

                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1" />

                <TextView
                    android:id="@+id/textView_district6"
                    style="@style/Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Quận 7"
                    android:textColor="@color/primaryColor"

                    android:textStyle="bold"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1" />
            </androidx.gridlayout.widget.GridLayout>

            <TextView
                android:id="@+id/textView3"
                style="@style/Headline6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_margin"
                android:text="@string/phong_moi_dang"
                android:textColor="@color/primaryColor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/grid_district" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_apartments"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/default_margin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView3" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>