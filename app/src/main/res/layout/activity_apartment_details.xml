<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ActionBar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:navigationIcon="?attr/homeAsUpIndicator"
                app:title="@string/chi_tiet_phong"
                app:titleTextColor="@color/primaryColor" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/constraint1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/backGroundColor"
                tools:context=".view.ui.apartmentdetails.ApartmentDetailsActivity">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardView_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small_margin"
                    android:elevation="4dp"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/imageView_apartment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxHeight="250dp"
                        android:minHeight="200dp"
                        android:src="@drawable/image_load" />

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardView_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small_margin"
                    android:elevation="4dp"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cardView_image">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView_title"
                            style="@style/Headline6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/small_margin"
                            android:lines="1"
                            android:maxWidth="230dp"
                            android:text="Phòng cho thuê"
                            android:textColor="@color/secondaryColor"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textView_date"
                            style="@style/Subtitle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/small_margin"
                            android:lines="1"
                            android:maxWidth="100dp"
                            android:text="30/04/2020"
                            android:textColor="@color/primaryLightColor"
                            app:layout_constraintBottom_toBottomOf="@id/textView_title"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/textView_title" />

                        <TextView
                            android:id="@+id/textView1"
                            style="@style/Subtitle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_margin="@dimen/small_margin"
                            android:text="Địa chỉ:"
                            android:textColor="@android:color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/textView_title" />

                        <TextView
                            android:id="@+id/textView_address"
                            style="@style/Subtitle1"
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/small_margin"
                            android:lines="1"
                            android:maxWidth="300dp"
                            android:text="1 Võ Văn Ngân"
                            android:textColor="@color/secondaryColor"
                            app:layout_constraintStart_toEndOf="@id/textView1"
                            app:layout_constraintTop_toBottomOf="@id/textView_title" />

                        <TextView
                            android:id="@+id/textView2"
                            style="@style/Subtitle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/small_margin"
                            android:text="Tên chủ:"
                            android:textColor="@android:color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/textView1" />

                        <TextView
                            android:id="@+id/textView_name"
                            style="@style/Subtitle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/small_margin"
                            android:text="Nam"
                            android:textColor="@color/secondaryColor"
                            app:layout_constraintStart_toEndOf="@id/textView2"
                            app:layout_constraintTop_toBottomOf="@id/textView1" />

                        <TextView
                            android:id="@+id/textView3"
                            style="@style/Subtitle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/small_margin"
                            android:text="Số điện thoại:"
                            android:textColor="@android:color/black"

                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/textView2" />

                        <TextView
                            android:id="@+id/textView_phone"
                            style="@style/Subtitle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/small_margin"
                            android:text="0316649852"
                            android:textColor="@color/secondaryColor"
                            app:layout_constraintStart_toEndOf="@id/textView3"
                            app:layout_constraintTop_toBottomOf="@id/textView2" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardView_rating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small_margin"
                    android:elevation="10dp"
                    app:cardCornerRadius="10dp"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cardView_info">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView_rating"
                            style="@style/Headline6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/small_margin"
                            android:text="Đánh giá"
                            android:textColor="@android:color/black"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatRatingBar
                            android:id="@+id/rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/small_margin"
                            android:numStars="5"
                            android:rating="4.5"
                            android:theme="@style/RatingBar"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardView_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small_margin"
                    android:elevation="10dp"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cardView_rating">

                    <androidx.gridlayout.widget.GridLayout
                        android:id="@+id/grid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="4dp"
                        app:columnCount="4"
                        app:rowCount="2">

                        <ImageView
                            android:id="@+id/imageView_price"
                            android:layout_width="@dimen/smaller_image"
                            android:layout_height="@dimen/smaller_image"
                            android:layout_margin="@dimen/small_margin"
                            android:src="@mipmap/house_add"
                            app:layout_columnWeight="1"
                            app:layout_rowWeight="1" />

                        <ImageView
                            android:id="@+id/imageView_electric"
                            android:layout_width="@dimen/smaller_image"
                            android:layout_height="@dimen/smaller_image"
                            android:layout_margin="@dimen/small_margin"
                            android:src="@mipmap/electric"
                            app:layout_columnWeight="1"
                            app:layout_rowWeight="1" />

                        <ImageView
                            android:id="@+id/imageView_water"
                            android:layout_width="@dimen/smaller_image"
                            android:layout_height="@dimen/smaller_image"
                            android:layout_margin="@dimen/small_margin"
                            android:src="@mipmap/water"
                            app:layout_columnWeight="1"
                            app:layout_rowWeight="1" />

                        <ImageView
                            android:id="@+id/imageView_area"
                            android:layout_width="@dimen/smaller_image"
                            android:layout_height="@dimen/smaller_image"
                            android:layout_margin="@dimen/small_margin"
                            android:src="@mipmap/area"
                            app:layout_columnWeight="1"
                            app:layout_rowWeight="1" />

                        <TextView
                            android:id="@+id/textView_price"
                            style="@style/Subtitle2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="4 triệu"
                            android:textColor="@color/primaryColor"
                            app:layout_columnWeight="1"
                            app:layout_rowWeight="1" />

                        <TextView
                            android:id="@+id/textView_electric"
                            style="@style/Subtitle2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="5000 VNĐ"
                            android:textColor="@color/primaryColor"
                            app:layout_columnWeight="1"
                            app:layout_rowWeight="1" />

                        <TextView
                            android:id="@+id/textView_water"
                            style="@style/Subtitle2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="15000 VNĐ"
                            android:textColor="@color/primaryColor"
                            app:layout_columnWeight="1"
                            app:layout_rowWeight="1" />

                        <TextView
                            android:id="@+id/textView_area"
                            style="@style/Subtitle2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="2dp"
                            android:text="@string/met_vuong"
                            android:textColor="@color/primaryColor"
                            app:layout_columnWeight="1"
                            app:layout_rowWeight="1" />

                    </androidx.gridlayout.widget.GridLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardView_utils"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small_margin"
                    android:elevation="10dp"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cardView_price">

                    <androidx.gridlayout.widget.GridLayout
                        android:id="@+id/grid_utils"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="4dp"
                        app:columnCount="3"
                        app:rowCount="5">

                        <TextView
                            android:id="@+id/textView_utils"
                            style="@style/Headline6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/small_margin"
                            android:text="Tiện ích"
                            android:textAlignment="center"
                            android:textColor="@color/secondaryColor"
                            app:layout_columnSpan="3"
                            app:layout_columnWeight="1"
                            app:layout_rowWeight="1" />

                        <com.thomas.apps.nhatrosvkltn.utils.ToggleImageView
                            android:id="@+id/image_wifi"
                            android:layout_width="@dimen/smaller_image"
                            android:layout_height="@dimen/smaller_image"
                            android:layout_margin="@dimen/smaller_margin"
                            app:layout_columnWeight="1"
                            app:layout_rowWeight="1"
                            app:src_checked="@drawable/wifi_blue"
                            app:src_unchecked="@drawable/wifi_gray" />

                        <com.thomas.apps.nhatrosvkltn.utils.ToggleImageView
                            android:id="@+id/image_time"
                            android:layout_width="@dimen/smaller_image"
                            android:layout_height="@dimen/smaller_image"
                            android:layout_margin="@dimen/smaller_margin"
                            app:layout_columnWeight="1"
                            app:layout_rowWeight="1"
                            app:src_checked="@drawable/time_blue"
                            app:src_unchecked="@drawable/time_gray" />

                        <com.thomas.apps.nhatrosvkltn.utils.ToggleImageView
                            android:id="@+id/image_key"
                            android:layout_width="@dimen/smaller_image"
                            android:layout_height="@dimen/smaller_image"
                            android:layout_margin="@dimen/smaller_margin"
                            app:layout_columnWeight="1"
                            app:layout_rowWeight="1"
                            app:src_checked="@drawable/key_blue"
                            app:src_unchecked="@drawable/key_gray" />

                        <TextView
                            android:id="@+id/textView_wifi"
                            style="@style/Subtitle2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Wifi"
                            android:textColor="@color/primaryColor"
                            app:layout_columnWeight="1"
                            app:layout_rowWeight="1" />

                        <TextView
                            android:id="@+id/textView_time"
                            style="@style/Subtitle2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Tự do"
                            android:textColor="@color/primaryColor"
                            app:layout_columnWeight="1"
                            app:layout_rowWeight="1" />

                        <TextView
                            android:id="@+id/textView_key"
                            style="@style/Subtitle2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Chung chủ"
                            android:textColor="@color/primaryColor"
                            app:layout_columnWeight="1"
                            app:layout_rowWeight="1" />

                        <com.thomas.apps.nhatrosvkltn.utils.ToggleImageView
                            android:id="@+id/image_car"
                            android:layout_width="@dimen/smaller_image"
                            android:layout_height="@dimen/smaller_image"
                            android:layout_margin="@dimen/smaller_margin"
                            app:layout_columnWeight="1"
                            app:layout_rowWeight="1"
                            app:src_checked="@mipmap/bike_blue"
                            app:src_unchecked="@mipmap/bike_gray" />

                        <com.thomas.apps.nhatrosvkltn.utils.ToggleImageView
                            android:id="@+id/image_air"
                            android:layout_width="@dimen/smaller_image"
                            android:layout_height="@dimen/smaller_image"
                            android:layout_margin="@dimen/smaller_margin"
                            app:layout_columnWeight="1"
                            app:layout_rowWeight="1"
                            app:src_checked="@mipmap/air_blue"
                            app:src_unchecked="@mipmap/air_gray" />

                        <com.thomas.apps.nhatrosvkltn.utils.ToggleImageView
                            android:id="@+id/image_heater"
                            android:layout_width="@dimen/smaller_image"
                            android:layout_height="@dimen/smaller_image"
                            android:layout_margin="@dimen/smaller_margin"
                            app:layout_columnWeight="1"
                            app:layout_rowWeight="1"
                            app:src_checked="@mipmap/heater_blue"
                            app:src_unchecked="@mipmap/heater_gray" />

                        <TextView
                            android:id="@+id/textView_car"
                            style="@style/Subtitle2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Wifi"
                            android:textColor="@color/primaryColor"
                            app:layout_columnWeight="1"
                            app:layout_rowWeight="1" />

                        <TextView
                            android:id="@+id/textView_air"
                            style="@style/Subtitle2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Tự do"
                            android:textColor="@color/primaryColor"
                            app:layout_columnWeight="1"
                            app:layout_rowWeight="1" />

                        <TextView
                            android:id="@+id/textView_heater"
                            style="@style/Subtitle2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Chung chủ"
                            android:textColor="@color/primaryColor"
                            app:layout_columnWeight="1"
                            app:layout_rowWeight="1" />
                    </androidx.gridlayout.widget.GridLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardView_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small_margin"
                    android:elevation="10dp"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cardView_utils">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView_details"
                            style="@style/Headline6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/small_margin"
                            android:text="Chi tiết"
                            android:textColor="@color/secondaryColor"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textView_details_content"
                            style="@style/Subtitle2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/small_margin"
                            android:padding="5dp"
                            android:text="@string/sample_details"
                            android:textColor="@android:color/black"

                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/textView_details" />

                        <EditText
                            android:id="@+id/edit_comment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/small_margin"
                            android:drawableEnd="@drawable/send"
                            android:lines="1"
                            android:hint="@string/binh_luan"
                            android:singleLine="true"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/textView_details_content" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardView_comments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small_margin"
                    android:layout_marginBottom="56dp"
                    android:layout_marginHorizontal="@dimen/small_margin"
                    android:elevation="10dp"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cardView_details">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView_comments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.card.MaterialCardView>

<!--                <view-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="1dp"-->
<!--                    android:layout_marginHorizontal="@dimen/small_margin"-->
<!--                    android:layout_marginTop="56dp"-->
<!--                    android:background="@android:color/darker_gray"-->
<!--                    app:layout_constraintBottom_toBottomOf="@id/cardView_comments"-->
<!--                    app:layout_constraintEnd_toEndOf="parent"-->
<!--                    app:layout_constraintStart_toStartOf="parent" />-->
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>